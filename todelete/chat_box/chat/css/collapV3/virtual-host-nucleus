<VirtualHost *:8001>
       ServerAdmin omnichannel-dev@capillarytech.com
       ServerName nuke.capillary.in
       DocumentRoot ${DH_WWW}/nucleus/
       DirectoryIndex entry.php

       <Directory ${DH_WWW}/nucleus>
                Options -Indexes FollowSymLinks Multiviews
                AllowOverride All
                Order allow,deny
                allow from all

		<IfModule mod_php5.c>
         	       php_value include_path ".:/usr/share/php:/usr/share/pear/php:/usr/share/pear:/usr/share/php/capillary-libs:/var/www/capillary/portal/lib:/var/www/capillary/cheetah:/var/www/capillary/nucleus"
	        </IfModule>
                
                FallbackResource /entry.php
        </Directory>

       ErrorLog "${DH_LOG}/apache/errors/php_error.log"
       LogLevel warn
       CustomLog "${DH_LOG}/apache/access/access.log" combined env=!dontlog
</VirtualHost>
